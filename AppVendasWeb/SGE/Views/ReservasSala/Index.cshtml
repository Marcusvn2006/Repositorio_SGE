@model IEnumerable<SGE.Models.ReservaSala>

@{
    ViewData["Title"] = "Index";
}

<h1>Reserva de Salas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadAtivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadInativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sala.SalaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.UsuarioId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CadAtivo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CadInativo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservaSalaId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReservaSalaId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReservaSalaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div style="    display: flex;
    justify-content: space-around;
margin-top: 320px;">
    <div style="    width: 50px;
    height: 50px;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px color(0, 0, 0);
    background:rgba(0,0,0, 0.4); backdrop-filter:saturate(180%) blur(20px);">
        <a asp-controller="Salas" asp-action="Index">
            <svg class="mx-2" bootstrap-icon="ArrowLeftCircleFill" width="30px" height="30px" color="#a7a7a7">
            </svg>
        </a>
    </div>

    <div style="    width: 50px;
    height: 50px;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px color(0, 0, 0);
    background:rgba(0,0,0, 0.4); backdrop-filter:saturate(180%) blur(20px);">
        <a asp-controller="TipoOcorrencia" asp-action="Index">
            <svg class="mx-2" bootstrap-icon="ArrowRightCircleFill" width="30px" height="30px" color="#a7a7a7">
            </svg>
        </a>
    </div>
</div>