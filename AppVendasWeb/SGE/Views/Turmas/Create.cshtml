@model SGE.Models.Turma

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Turma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TurmaNome" class="control-label"></label>
                <input asp-for="TurmaNome" class="form-control" />
                <span asp-validation-for="TurmaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Turno" class="control-label"></label>
                <input asp-for="Turno" class="form-control" />
                <span asp-validation-for="Turno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serie" class="control-label"></label>
                <input asp-for="Serie" class="form-control" />
                <span asp-validation-for="Serie" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" type="hidden" asp-for="CadAtivo" value="true" />
            </div>
            <div class="form-group">
                <input asp-for="DataInicio" class="form-control" type="hidden"
                       value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />
            </div>
            <div class="form-group">
                <input asp-for="CadInativo" class="form-control" type="hidden" />
            </div>


            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TurmaEncerrada" /> @Html.DisplayNameFor(model => model.TurmaEncerrada)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
