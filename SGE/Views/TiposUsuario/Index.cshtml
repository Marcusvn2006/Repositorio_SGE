@model IEnumerable<SGE.Models.TipoUsuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">
        <svg class="mx-2" bootstrap-icon="Plus" width="16" height="16" aria-label="Adicionar"></svg>

    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                <a class="btn btn-outline" asp-action="Edit">
                        <svg class="mx-2" bootstrap-icon="PencilFill" width="16" height="16" aria-label="Adicionar"></svg>

                    </a> |
                    <a class="btn btn-outline" asp-action="Details">
                        <svg class="mx-2" bootstrap-icon="CardList" width="16" height="16" aria-label="Adicionar"></svg>

                    </a> |
                    <a class="btn btn-outline" asp-action="Delete">
                        <svg class="mx-2" bootstrap-icon="Trash2" width="16" height="16" aria-label="Adicionar"></svg>
                        </a>

            </td>
        </tr>
}
    </tbody>
</table>
